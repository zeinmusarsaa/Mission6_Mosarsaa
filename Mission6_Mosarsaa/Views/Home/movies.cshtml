@{
    ViewData["Title"] = "New Movie Entry";
}

<h2>Add a New Movie to the Collection</h2>

<form asp-controller="Movies" asp-action="AddMovie" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <div class="form-group">
        <label for="year">Year</label>
        <input type="number" class="form-control" id="year" name="year" required>
    </div>

    <div class="form-group">
        <label for="director">Director</label>
        <input type="text" class="form-control" id="director" name="director" required>
    </div>

    <div class="form-group">
        <label for="rating">Rating</label>
        <select class="form-control" id="rating" name="rating" required>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="edited" name="edited">
        <label class="form-check-label" for="edited">Edited</label>
    </div>

    <div class="form-group">
        <label for="lentTo">Lent To</label>
        <input type="text" class="form-control" id="lentTo" name="lentTo">
    </div>

    <div class="form-group">
        <label for="notes">Notes (Max 25 characters)</label>
        <input type="text" class="form-control" id="notes" name="notes" maxlength="25">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
